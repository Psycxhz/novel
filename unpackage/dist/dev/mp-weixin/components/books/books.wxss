/* 水平间距 */
.books-item {
  margin-top: 20px;
  display: flex;
}
.books-item .books-item-l {
  width: 100px;
  height: 100px;
}
.books-item .books-item-l .books-item-image {
  width: 80%;
  height: 90%;
}
.books-item .books-item-r {
  font-size: 12px;
  color: #999999;
}
.books-item .books-item-r .top {
  margin-top: 0.2rem;
}
.books-item .books-item-r .title {
  font-size: 18px;
  font-weight: bold;
  color: black;
}
.books-item .books-item-r .shortIntro {
  width: 250px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
