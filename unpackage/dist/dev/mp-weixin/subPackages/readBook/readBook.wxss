.root {
  min-height: 100vh;
  position: relative;
  height: 100%;
  width: 100%;
  border: 1px solid transparent;
  box-sizing: border-box;
}
.root .mint-header {
  height: 40px;
  position: fixed;
  z-index: 2;
  top: 20px;
  color: #fff;
  font-size: 12px;
  background-color: rgba(0, 0, 0, 0.8);
  position: relative;
  line-height: 40px;
  display: flex;
  justify-content: space-around;
}
.root .mint-header .header-l {
  position: relative;
}
.root .mint-header .header-l .span {
  left: -40%;
  position: absolute;
  display: inline-block;
  border-top: 1px solid;
  border-left: 1px solid;
  height: 5px;
  top: 50%;
  -webkit-transform: translateY(-50%) rotate(-45deg);
          transform: translateY(-50%) rotate(-45deg);
  width: 5px;
}
.root .mint-footer {
  position: fixed;
  padding: 10px;
  z-index: 2;
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.8);
}
.root .mint-footer .footer-style .color {
  border: 1px solid #409eff;
}
.root .mint-footer .footer {
  margin-top: 10px;
  display: flex;
  justify-content: center;
}
.root .mint-footer .footer-item {
  margin-right: 5px;
  width: 100px;
  line-height: 30px;
  color: #fff;
  height: 30px;
  border-radius: 5px;
  border: 1px solid #fff;
  text-align: center;
}
.root .book-page {
  position: absolute;
  width: 100%;
  display: flex;
  z-index: 1;
  height: 100%;
  min-height: 100vh;
}
.root .book-page .left {
  width: 30%;
  height: 100%;
}
.root .book-page .center {
  width: 60%;
  height: 100%;
}
.root .book-page .right {
  width: 30%;
  height: 100%;
}
.root .list-content {
  background-color: #fff;
  height: 92vh;
  z-index: 3;
  position: absolute;
  bottom: 0;
  width: 70%;
  overflow: auto;
  overflow-y: auto;
}
.root .list-content .list-content-item {
  line-height: 2rem;
  margin-left: 1rem;
  border-bottom: 1px solid #e0e0e0;
  height: 2rem;
  font-size: 12px;
}
.root .contenText {
  width: 100%;
  height: 92vh;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
  font-size: 12px;
}
.root .contenText .contenTextData {
  display: inline-block;
  position: relative;
  width: 100%;
  height: 88vh;
  bottom: 0;
  text-indent: 1.5em;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 26px;
}
.root .contenText .contenTextData .rich-text {
  width: 97%;
  display: inline-block;
  position: absolute;
  left: 0;
  z-index: -1;
  opacity: 0;
  padding: 0 10px;
  box-sizing: border-box;
  text-indent: 1.5em;
}
.root .contenText .contenTextData .rich-text .text {
  border: 1px solid transparent;
}
.root .contenText .contenTextData .rich-text-data {
  width: 97%;
  height: 100%;
  position: absolute;
  -webkit-columns: calc(100vw - 32px) 1;
          columns: calc(100vw - 32px) 1;
  -webkit-column-gap: 16px;
          column-gap: 16px;
  left: 0;
}

